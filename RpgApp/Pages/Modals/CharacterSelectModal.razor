<div class="button-container">
    <RpgButton RpgButtonStyle="RpgButtonStyle.Silver" Label="Refresh" Width="20" OnClick="Refresh"></RpgButton>
</div>
<hr style="margin-top:2px; margin-bottom:2px" />
<RpgTable Items="AppState.UserData.Players" TItem="Player" Context="player" OnItemSelected="HandlePlayerSelect" OnDblClickRow="HandlePlayerSelect">
    <TableHeader>
        <th>Name</th>
        <th>Class</th>
        <th>Level</th>
        <th>Exp</th>
        <th>Gold</th>
    </TableHeader>
    <RowTemplate>
        <td>@player.Name</td>
        <td>@player.ClassType.ToString()</td>
        <td>@player.Level</td>
        <td>@player.Experience</td>
        <td>@player.Gold</td>
    </RowTemplate>
</RpgTable>