<div class="rpgui-content rpgui-container framed">
    <h1>Test Select Player</h1>
    @*<MatTextField HelperText="use 'admin' for testing" Label="UserName" HelperTextPersistent="true" @bind-Value="userInput"></MatTextField>*@
    <RpgButton OnClick="GetUserPlayers">Get</RpgButton>
    
    @if (isPlayerQuery)
    {
        <div class="mat-layout-grid">
            <div class="mat-layout-grid-inner">
                <div class="mat-layout-grid-cell mat-layout-grid-cell-span-6">
                    <MatH6>Double click to select</MatH6>
                    <MatTable TableItem="Player" Items="UserPlayers" Class="mat-elevation-z5" OnRowDbClick="SelectPlayer" AllowSelection="true">
                        <MatTableHeader>
                            <th>Id</th>
                            <th>Name</th>
                            <th>Class</th>
                            <th>Level</th>
                        </MatTableHeader>
                        <MatTableRow>
                            <td>@context.ID</td>
                            <td>@context.Name</td>
                            <td>@context.ClassType.ToString()</td>
                            <td>@context.Level</td>
                        </MatTableRow>
                    </MatTable>
                </div>
                <div class="mat-layout-grid-cell mat-layout-grid-cell-span-6">
                    @if (selectedPlayer != null)
                    {
                        <h1>Current Player</h1>
                        <h2>@selectedPlayer.Name</h2>
                        <h3>@selectedPlayer.ClassType.ToString()</h3>
                    }
                </div>
            </div>
        </div>
    }
    <h1 Class="text-center">Test Get Equip/Skills with manual query filter</h1>
    <div class="mat-layout-grid">
        <div class="mat-layout-grid-inner">
            <div class="mat-layout-grid-cell mat-layout-grid-cell-span-6">
                <h1>Equipment</h1>
                <h2 class="text-center">filter by @equipGold gp</h2>
                <RpgSlider MinValue="0" MaxValue="100" DataValueChanged="@GetEquipFilterByGp"></RpgSlider><hr />
                @if (isEquipQuery)
                {
                    <MatTable TableItem="Equipment" Items="EquipmentQueryResult" Class="mat-elevation-z5">
                        <MatTableHeader>
                            <th>Name</th>
                            <th>Gold Cost</th>
                            <th>Description</th>
                        </MatTableHeader>
                        <MatTableRow>
                            <td>@context.Name</td>
                            <td>@context.GoldCost</td>
                            <td>@context.Description</td>
                        </MatTableRow>
                    </MatTable>
                }
            </div>
            <div class="mat-layout-grid-cell mat-layout-grid-cell-span-6">
                <h1>Skills</h1>
                <h2 class="text-center">filter by @skillGold gp</h2>
                @*<MatSlider TValue="int" Step="5" EnableStep="true" ValueMin="0" ValueMax="100" ValueChanged="@GetSkillFilterByGp"></MatSlider><hr />*@
                <RpgSlider MinValue="0" MaxValue="100" DataValueChanged="@GetSkillFilterByGp"></RpgSlider><hr />
                @if (isSkillQuery)
                {
                    <MatTable TableItem="Skill" Items="SkillQueryResult" Class="mat-elevation-z5">
                        <MatTableHeader>
                            <th>Name</th>
                            <th>Gold Cost</th>
                            <th>Description</th>
                        </MatTableHeader>
                        <MatTableRow>
                            <td>@context.Name</td>
                            <td>@context.GoldCost</td>
                            <td>@context.Description</td>
                        </MatTableRow>
                    </MatTable>
                }
            </div>
        </div>
    </div>
</div>