
@foreach (var asset in SpriteSets.AllSpriteAssets())
{
    <img id="@asset.Name" hidden src="@asset.ImgUrl" width="@asset.Width()" height="@asset.Height()" alt="image for @asset.Name" />
}


@code {

    private string contentUrl = "_content/RpgComponentLibrary/SpriteSheets";
    private string otherContentUrl = "_content/RpgComponentLibrary/";
    // Purely static asset should only have to render once
    protected override bool ShouldRender()
    {
        return false;
    }

}